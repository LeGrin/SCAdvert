<Window x:Class="SCAdvert.LoginForm" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="148" Width="240" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Title="Вход в администрирование">
    <Grid>
        <Button Name="BtnEnter" Content="Войти" HorizontalAlignment="Left" Margin="18,79,0,0" VerticalAlignment="Top" Width="87" Click="BtnEnter_Click" Background="#FF16ADE6" Foreground="White" 
                IsDefault="True"/>
        <Button Name="BtnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="122,79,0,0" VerticalAlignment="Top" Width="89" Background="#FF16ADE6" Foreground="White" Click="BtnCancel_Click"/>
        
        <TextBox Name="TxtLogin" HorizontalAlignment="Left" Height="23" Margin="69,11,0,0" TextWrapping="Wrap" Text="SCAdvert" VerticalAlignment="Top" Width="142"/>

        <Label Content="Логин:" HorizontalAlignment="Left" Margin="18,9,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top"/>
        
        <PasswordBox Name="txtPassword" HorizontalAlignment="Left" Margin="69,44,0,0" VerticalAlignment="Top" Width="142"/>

    </Grid>
</Window>
